<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/music_start_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/music_start"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="352dp"
        android:layout_marginStart="352dp" />
    <Button
        android:id="@+id/musdic_next_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/music_next_up"
        android:layout_alignBaseline="@+id/music_start_id"
        android:layout_alignBottom="@+id/music_start_id"
        android:layout_toRightOf="@+id/music_start_id"
        android:layout_toEndOf="@+id/music_start_id" />
</RelativeLayout>
